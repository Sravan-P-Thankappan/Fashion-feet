<main class="page-content">
    <!--breadcrumb-->
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">eCommerce</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Offer Management</li>
                </ol>
            </nav>
        </div>


    </div>


    <!--end breadcrumb-->
    <h6 class="mb-0 text-uppercase">Offer Management</h6>
    <hr>

    <div class="card">
        <div class="card-header py-3">
            <h6 class="mb-0">Add Category Offer</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-lg-4 d-flex">
                    <div class="card border shadow-none w-100">
                        <div class="card-body">
                            <form class="row g-3" action="/admin/productoffer" method="post">
                                <div class="col-12">
                                    <label class="form-label">Product</label>
                                    <select name="product" class="form-select">


                                        <option>
                                            {{product.Name}}
                                        </option>

                                    </select>
                                    {{!-- <input type="text" name="code" class="form-control" placeholder=""> --}}

                                </div>


                                <div class="col-12">
                                    <label class="form-label">Offer </label>
                                    <label class="text-danger" id="pOfferEr" for=""></label>
                                    <input type="number" id="productoffer" name="offer" class="form-control"
                                        onkeyup="validateProductOfferPercentage()" placeholder="">

                                </div>

                                <div class="col-12">
                                    <div class="d-grid">
                                        <button class="btn btn-primary" onclick="return validateProductOffer()">Add
                                            Offer</button>
                                    </div>
                                    <label id="submitEr" class="text-danger" for=""></label>

                                </div>

                            </form>
                        </div>
                    </div>
                </div>





            </div>
            <!--end row-->
        </div>
    </div>









</main>