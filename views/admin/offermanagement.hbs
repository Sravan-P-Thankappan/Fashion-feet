<main class="page-content">
    <!--breadcrumb-->
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">eCommerce</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Offer Management</li>
                </ol>
            </nav>
        </div>


    </div>


    <!--end breadcrumb-->
    <h6 class="mb-0 text-uppercase">Offer Management</h6>
    <hr>

    <div class="card">
        <div class="card-header py-3">
            <h6 class="mb-0">Add Category Offer</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-lg-4 d-flex">
                    <div class="card border shadow-none w-100">
                        <div class="card-body">
                            <form class="row g-3" action="/admin/offer" method="post">
                                <div class="col-12">
                                    <label class="form-label">Category</label>
                                    <select name="category" class="form-select">
                                        
                                        {{#each category}}
                                        <option>
                                            {{this.Category}}
                                        </option>
                                        {{/each}}
                                    </select>
                                    {{!-- <input type="text" name="code" class="form-control" placeholder=""> --}}

                                </div>


                                <div class="col-12">
                                    <label class="form-label">Offer </label>
                                    <label class="text-danger" id="categoryofferEr" for=""></label>
                                    <input type="number" name="offer" class="form-control" id="categoryoffer" onkeyup="validateCategoryPercentage()" placeholder="">

                                </div>

                                <div class="col-12">
                                    <div class="d-grid">
                                        <button class="btn btn-primary" onclick="return validateCategoryOffer()">Add Offer</button>
                                    </div>
                                    <label id="submitEr" class="text-danger" for=""></label>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>




                <div class="col-12 col-lg-8 d-flex">
                    <div class="card border shadow-none w-100">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Number</th>
                                            <th>Image</th>
                                            <th>Category</th>


                                            <th>Offer</th>

                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each offer}}
                                        <tr>

                                            <td>*</td>
                                            <td><img src="/product-image/{{this.Category.Image.[0]}}"
                                                    style="width: 100px; height:100px ;" alt=""></td>
                                            <td>{{this.Category.Category}}</td>

                                            <td>{{this.offer}}%</td>
                                            <td>
                                                <div class="d-flex align-items-center gap-3 fs-6">

                                                    {{!-- <a href="" class="text-warning" data-bs-toggle="tooltip"
                                                        data-bs-placement="bottom" title=""
                                                        data-bs-original-title="Edit info" aria-label="Edit"><i
                                                            class="bi bi-pencil-fill"></i></a> --}}
                                                    <a href="/admin/deleteoffer/{{this._id}}/{{this.Category._id}}"
                                                        onclick="return confirm('Do you want to delete?')"
                                                        class="text-danger" data-bs-toggle="tooltip"
                                                        data-bs-placement="bottom" title=""
                                                        data-bs-original-title="Delete" aria-label="Delete"><i
                                                            class="bi bi-trash-fill"></i></a>
                                                </div>
                                            </td>
                                        </tr>

                                        {{/each}}



                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <!--end row-->
        </div>
    </div>




    




</main>