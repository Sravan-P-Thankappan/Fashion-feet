<main class="page-content">
	<!--breadcrumb-->
	<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
		<div class="breadcrumb-title pe-3">eCommerce</div>
		<div class="ps-3">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb mb-0 p-0">
					<li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
					</li>
					<li class="breadcrumb-item active" aria-current="page">User Details</li>
				</ol>
			</nav>
		</div>


	</div>


	<!--end breadcrumb-->
	<h6 class="mb-0 text-uppercase">Order List</h6>
	<hr />
	<div class="card">
		<div class="card-body">
			<div class="table-responsive">
				<table id="example" class="table table-striped table-bordered" style="width:100%">
					<thead>
						<tr>
							<th>No</th>
							<th>Date</th>
							<th>Order ID</th>
							
							<th>User</th>
							
							<th>Payment</th>
							<th>Amount</th>
							<th>Status</th>
							<th>Action</th>
							<th>Details</th>

						</tr>
					</thead>
					<tbody>

						{{#each orders}}
						<tr>
							<th scope="row">*</th>

							<td>{{this._id.date}}</td>
							<td>{{this._id._id}}</td>
							<td>{{this._id.user}}</td>
							
							<td>{{this._id.paymentMethod}}</td>
							<td>{{this._id.totalAmount}}</td>
							<td>{{this._id.status}}</td>

							{{!-- <td>@mdo</td> --}}
							{{!-- <td>

								<a href="/admin/ordercancel/{{this._id}}" class="btn btn-danger">cancel</a>


							</td> --}}
							<td>
								<div class="ms-auto">
									<div class="btn-group">
										<button type="button" class="btn btn-primary">Action</button>
										<button type="button"
											class="btn btn-primary split-bg-primary dropdown-toggle dropdown-toggle-split"
											data-bs-toggle="dropdown"> <span class="visually-hidden">Toggle
												Dropdown</span>
										</button>
										<div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-end">
											<a class="dropdown-item" href="/admin/shipp/{{this._id._id}}">Shipp</a>

											<a class="dropdown-item" href="/admin/delivered/{{this._id._id}}">Delivered</a>
											<a class="dropdown-item" href="/admin/cancel/{{this._id._id}}">Cancel</a>
										</div>
									</div>
								</div>
							</td>
							<td>
								<a class="btn btn-warning  h-100 w-75" href="/admin/orderdetails/{{this._id._id}}">Details</a>
							</td>
						</tr>
						{{/each}}


					</tbody>
				</table>
			</div>
		</div>
	</div>




</main>
<!--end page main-->


