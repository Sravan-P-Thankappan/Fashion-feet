
<div class="breadcrumb-area bg-gray" style="margin-top: 12rem;">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <ul>
                <li class="active">Wishlist </li>
            </ul>
        </div>
    </div>
</div>

<div class="cart-main-area pt-115 pb-120">
    <div class="container">
        <h3 class="cart-page-title">Your cart items</h3>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <form action="#">
                    <div class="table-content table-responsive cart-table-content">
                        <table>
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Product Name</th>
                                    <th>Until Price</th>
                                    
                                    <th>action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each products}}
                                <tr>
                                    <td class="product-thumbnail">
                                        <a href=""><img style="width: 100px; height:100px ; " src="/product-image/{{this.productlist.Image.[0]}}" alt=""></a>
                                    </td>
                                    <td class="product-name"><a href="">{{this.productlist.Name}}</a></td>
                                    <td class="product-price-cart"><span class="amount">{{this.productlist.Price}}</span></td>
                                    
                                    <td class="product-wishlist-cart">
                                        <button class="btn btn-dark text-light" onclick="addToCart('{{this.productlist._id}}')" >Add To Cart</button>
                                        {{!-- <a href="#">add to cart</a> --}}
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>