<div class="breadcrumb-area bg-gray " style="margin-top: 12rem;">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <ul>
                {{!-- <li>
                    <a href="index.html">Home</a>
                </li> --}}
                <li class="active">Order details </li>
            </ul>
        </div>
    </div>
</div>

<div class="cart-main-area pt-115 pb-120">
    <div class="container ">
        {{!-- <h3 class="cart-page-title">Your Orders</h3> --}}
        <div class="row ">
            <div class="col-lg-12 col-md-10 col-sm-10 col-10 ">

                <div class="table-content table-responsive cart-table-content ms-2">
                    <table id="example">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Product Name</th>
                                <th>Unit Price</th>
                                <th>Size</th>
                                <th>Offer</th>
                                <th></th>

                                {{!-- <th>Order Status</th>
                                <th>action</th> --}}
                            </tr>
                        </thead>
                        <tbody>

                            {{#each products}}
                            <tr>

                                <td class="product-thumbnail">
                                    <a href="#"><img style="width: 75px; height:50px"
                                            src="/product-image/{{this.item.Image.[0]}}" alt=""></a>
                                </td>
                                <td class="product-name"><a href="">{{this.item.Name}}</a></td>

                                <td class="product-price-cart"><span class="amount">{{this.item.Price}}</span></td>

                                <td>{{this.item.Size}}</td>
                                <td>{{this.Discount}}</td>


                                {{!-- <td><a href="/invoice/{{this._id}}">Invoice</a></td> --}}

                            </tr>

                            {{/each}}

                        </tbody>
                    </table>

                </div>

            </div>


        </div>
    </div>
</div>

<div class="container mb-5">
<div class="card ">
    <div class="card-body">
        <div class="container mb-5 mt-3">
            <div class="row d-flex align-items-baseline">
                <div class="col-xl-9">
                </div>

                <hr>
            </div>

            <div class="container">
                <div class="col-md-12">
                    <div class="text-center">
                        <i class="fab fa-mdb fa-4x ms-0" style="color:#5d9fc5 ;"></i>
                        <p class="pt-0 text-danger">Fashion Feet</p>
                    </div>

                </div>


                <div class="row">
                    <div class="col-xl-8">
                        <ul class="list-unstyled">
                            <li class="text-muted">To: <span style="color:#5d9fc5 ;">{{products.[0].user.Name}}</span></li>
                            <li class="text-muted">{{products.[0].address.Housename}}</li>
                            <li class="text-muted">{{products.[0].address.Streetname}},{{products.[0].address.State}}</li>
                            <li class="text-muted"><i class="fas fa-phone"></i> {{products.[0].user.Phone}}</li>
                            <li class="text-muted">{{products.[0].user.Email}}</li>

                        </ul>
                    </div>
                    <div class="col-xl-4">
                        <p class="text-muted">Invoice</p>
                        <ul class="list-unstyled">
                            <li class="text-muted"><i class="fas fa-circle" style="color:#84B0CA ;"></i> <span
                                    class="fw-bold">ID:</span>{{products.[0]._id}}</li>
                            <li class="text-muted"><i class="fas fa-circle" style="color:#84B0CA ;"></i> <span
                                    class="fw-bold">Creation Date: </span>{{products.[0].date}}</li>
                            <li class="text-muted"><i class="fas fa-circle" style="color:#84B0CA ;"></i> <span
                                    class="me-1 fw-bold">Status:</span><span
                                    class="badge bg-warning text-black fw-bold">
                                    {{products.[0].status}}</span></li>
                        </ul>
                    </div>
                </div>

                <div class="row my-2 mx-1 justify-content-center">
                    <table class="table table-striped table-borderless">
                        <thead style="background-color:#84B0CA ;" class="text-white">
                            
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Product</th>
                                <th scope="col">Unit Price</th>
                                <th scope="col">Qty</th>
                                
                                <th scope="col">Actual Price</th>
                                <th scope="col">Discount</th>
                                <th scope="col">Total Discount</th>
                                <th>Selling Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}
                            <tr>
                                <th scope="row"></th>
                                <td>{{this.item.Name}}</td>
                                <td>{{this.item.Price}}</td>
                                <td>{{this.quantity}}</td> 
                                <td>{{this.actualPrice}}</td>
                                <td>{{this.productDiscount}}</td>
                                <td>{{this.totalDiscount}}</td>
                                <td>{{this.totalPrice}}</td>
                            </tr>
                            {{/each}}
                        </tbody>

                    </table>
                </div>
                <div class="row">
                    <div class="col-xl-8">
                        {{!-- <p class="ms-3">Add additional notes and payment information</p> --}}

                    </div>
                    <div class="col-xl-3">
                        <ul class="list-unstyled">
                            <li class="text-muted ms-3"><span class="text-black me-4">SubTotal</span>{{totals.[0].subtotal}}</li>
                            <li class="text-muted ms-3 mt-2"><span class="text-black me-4">Total Discount</span>{{totals.[0].discount}}</li>
                         <li class="text-muted ms-3 mt-2"><span class="text-black me-4">Coupon Offer</span>{{products.[0].couponoffer}}</li>
                         <li class="text-muted ms-3 mt-2"><span class="text-black me-4">Wallet Offer</span>{{products.[0].walletoffer}}</li>


                        </ul>
                        <p class="text-black float-start ms-3"><span class="text-black me-3"> Total Amount</span><span
                                style="font-size: 25px;">{{products.[0].totalAmount}}</span></p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-xl-10">
                        <p>Thank you for your purchase</p>
                    </div>
                    
                </div>

            </div>
        </div>
    </div>
</div>

</div>