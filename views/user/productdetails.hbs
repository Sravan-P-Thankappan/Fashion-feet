<div class="product-details-area pt-120 pb-115">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-12">
                <div class="product-details-tab">

                    <div class="product-dec-right pro-dec-big-img-slider">

                        <div class="easyzoom-style">

                            <div class="easyzoom easyzoom--overlay pt-3">

                                <a href="/product-image/{{product.Image.[0]}}">

                                    <img src="/product-image/{{product.Image.[0]}}" alt="p" class="mt-3"
                                        style="width:300px ; height:300px ;">
                                </a>

                            </div>

                            

                        </div>

                        <div class="easyzoom-style">
                            <div class="easyzoom easyzoom--overlay">
                               <a href="/product-image/{{product.Image.[1]}}">

                                    <img src="/product-image/{{product.Image.[1]}}" alt="" style="width:300px ; height:300px ;">
                                </a>
                            </div>
                     
                        </div>


                         <div class="easyzoom-style">
                            <div class="easyzoom easyzoom--overlay">
                               <a href="/product-image/{{product.Image.[2]}}">

                                    <img src="/product-image/{{product.Image.[2]}}" alt="" style="width:300px ; height:300px ;">
                                </a>
                            </div>
                         
                        </div> 


                         <div class="easyzoom-style">
                            <div class="easyzoom easyzoom--overlay">
                               <a href="/product-image/{{product.Image.[3]}}">

                                    <img src="/product-image/{{product.Image.[3]}}" alt="" style="width:300px ; height:300px ;">
                                </a>
                            </div>
                            
                        </div> 

                        

                    </div>


                    <div class="product-dec-left product-dec-slider-small-2 product-dec-small-style2 me-3">

                        <div class="product-dec-small active">
                            <img src="/product-image/{{product.Image.[0]}}" alt="">
                        </div>

                        <div class="product-dec-small">
                            <img src="/product-image/{{product.Image.[1]}}" alt="">
                        </div>

                        <div class="product-dec-small">
                            <img src="/product-image/{{product.Image.[2]}}" alt="">
                        </div>
                        <div class="product-dec-small">
                            <img src="/product-image/{{product.Image.[3]}}" alt="">
                        </div>

                    </div>

                   

                {{!-- </div> --}}


            </div>
        </div>




        <div class="col-lg-6 col-md-12">
            <div class="product-details-content pro-details-content-mt-md">
                <h4>{{product.Brand}}</h4>
                <h2>{{product.Name}}</h2>
                <div class="product-ratting-review-wrap">
                    <div class="product-ratting-digit-wrap">
                        <div class="product-ratting">
                            <i class="icon_star"></i>
                            <i class="icon_star"></i>
                            <i class="icon_star"></i>
                            <i class="icon_star"></i>
                            <i class="icon_star"></i>
                        </div>
                        <div class="product-digit">
                            <span>5.0</span>
                        </div>
                    </div>
                   
                </div>
                <p></p>
                {{#if product.offer}}
                 
                 <div class="pro-details-price">
                    <span class="new-price">&#x20b9;{{product.discountPrice}}</span>
                    <span class="old-price">&#x20b9;{{product.Price}}</span>
                </div>

                {{else}}
                {{#if product.productoffer}}

                <div class="pro-details-price">
                    <span class="new-price">&#x20b9;{{product.productdiscountprice}}</span>
                    <span class="old-price">&#x20b9;{{product.Price}}</span>
                </div>

             {{else}}
                <div class="pro-details-price">
                    <span class="new-price">&#x20b9;{{product.Price}}</span>
                </div>

                {{/if}}
                {{/if}}
                <div class="pro-details-color-wrap">
                    <span>Color:</span>
                    <div class="pro-details-color-content">

                        {{product.Color}}
                       
                    </div>
                </div>
                <div class="pro-details-size">
                    <span>Size:</span>
                    <div class="pro-details-size-content">

                        {{product.Size}}
                        
                    </div>
                </div>
                
                <div class="product-details-meta">
                    <ul>
                        <li><span>Categories:</span> <a href="">{{product.Category}}</a> <a
                                href="#">{{product.Subcategory}}</a>
                        </li>
                        
                    </ul>
                </div>
                <div class="pro-details-action-wrap">
                    <div class="pro-details-add-to-cart">
                        <button onclick="addToCart('{{product._id}}')" class="btn-dark p-3"  ></i>Add to Cart</button>
                    </div>
                    <div class="pro-details-action">
                        <a title="Add to Wishlist" href="#"><i class="icon-heart"></i></a>
                        <a title="Add to Compare" href="#"><i class="icon-refresh"></i></a>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>


